 </view> -->

 <view class="btarea">
     <button formType="submit" class="bt" type="primary" loading='{{!canSub}}' disabled='{{!canSub}}'>提交</button>
    <button formType="reset" class="bt">重置</button>
 </view>
</form>
</view>
