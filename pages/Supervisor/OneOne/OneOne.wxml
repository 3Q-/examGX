 <view  style="flex:5">{{placename}}</view>
 </view>
<view class="tr">
 <label class="label">上报类型：</label>
   <picker class="input" bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
    <view class="picker">
      {{array[index]}}
    </view>
  </picker>
